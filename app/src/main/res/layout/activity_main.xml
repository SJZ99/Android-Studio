<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/holo_blue_light"
        android:text="@string/text"
        />

    <EditText
        android:id="@+id/textField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:hint="@string/editText"
        />
    <TextView
        android:id="@+id/output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#176580"
        android:inputType="number"
        tools:ignore="TextViewEdits" />
    <Button
        android:id="@+id/cos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/sin"
        android:layout_toStartOf="@id/sin"
        android:layout_marginEnd="15dp"
        android:text="@string/cos"
        />

    <Button
        android:id="@+id/sin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:text="@string/sin" />

    <Button
        android:id="@+id/tan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/sin"
        android:layout_toEndOf="@id/sin"
        android:layout_marginStart="15dp"
        android:text="@string/tan"
        />
    <Button
        android:id="@+id/cos_Rad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/cos"
        android:layout_below="@id/cos"
        android:layout_marginTop="30dp"
        android:text="@string/cos_rad"
        />
    <Button
        android:id="@+id/sin_Rad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cos_Rad"
        android:layout_alignStart="@id/sin"
        android:text="@string/sin_rad"
        />
    <Button
        android:id="@+id/tan_Rad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cos_Rad"
        android:layout_alignStart="@id/tan"
        android:text="@string/tan_rad"
        />


</RelativeLayout>